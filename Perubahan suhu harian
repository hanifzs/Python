import numpy as np
import matplotlib.pyplot as plt
x = np.linspace(0, 24, 100)
y = 5 * np.sin(2 * np.pi * x / 24) + 20
plt.figure(figsize=(10, 6))
plt.plot(x, y)
plt.title('Perubahan Suhu Harian')
plt.xlabel('Waktu (jam)')
plt.ylabel('Suhu (Â°C)')
plt.grid(True)
plt.xticks(np.arange(0, 25, 4))
plt.ylim(10, 30)
plt.show()
